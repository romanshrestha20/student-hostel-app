generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(uuid())
  name           String
  email          String          @unique
  hashedPassword String
  role           Role            @default(student)
  gender         Gender?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  avatar         String?
  adminActions   AdminAction[]   @relation("AdminActions")
  bookings       Booking[]
  favorites      Favorite[]
  hostels        Hostel[]        @relation("HostelOwner")
  inquiries      Inquiry[]
  notifications  Notification[]
  replies        Reply[]         @relation("UserReplies")
  reviews        Review[]
  updateLogs     UserUpdateLog[] @relation("UserUpdateLogs")
  photos         Photo[]         @relation("UserPhotos")

  @@index([email])
  @@index([role])
}

model Hostel {
  id            String       @id @default(uuid())
  name          String
  description   String
  address       String
  locationLat   Float
  locationLng   Float
  contactNumber String
  amenities     String[]
  status        HostelStatus @default(pending)
  gender        Gender       @default(unisex)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  ownerId       String
  favorites     Favorite[]
  owner         User         @relation("HostelOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  inquiries     Inquiry[]
  photos        Photo[]      @relation("HostelPhotos")
  reviews       Review[]
  rooms         Room[]

  @@index([ownerId])
  @@index([status])
  @@index([locationLat, locationLng])
  @@index([gender])
}

model Room {
  id        String     @id @default(uuid())
  roomType  RoomType
  price     Float
  capacity  Int
  available Boolean    @default(true)
  amenities String[]
  hostelId  String
  bookings  Booking[]
  favorites Favorite[]
  photos    Photo[]    @relation("RoomPhotos")
  hostel    Hostel     @relation(fields: [hostelId], references: [id], onDelete: Cascade)

  @@index([hostelId])
  @@index([price])
  @@index([available])
}

model Booking {
  id        String        @id @default(uuid())
  studentId String
  roomId    String
  startDate DateTime
  endDate   DateTime
  status    BookingStatus @default(pending)
  createdAt DateTime      @default(now())
  room      Room          @relation(fields: [roomId], references: [id], onDelete: Cascade)
  student   User          @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

model Photo {
  id        String  @id @default(uuid())
  url       String
  isPrimary Boolean @default(false)

  hostelId  String?
  roomId    String?
  userId    String?

  hostel    Hostel? @relation("HostelPhotos", fields: [hostelId], references: [id], onDelete: Cascade)
  room      Room?   @relation("RoomPhotos", fields: [roomId], references: [id], onDelete: Cascade)
  user      User?   @relation("UserPhotos", fields: [userId], references: [id], onDelete: Cascade)
}

model Favorite {
  id        String   @id @default(uuid())
  studentId String
  hostelId  String
  roomId    String?
  createdAt DateTime @default(now())
  hostel    Hostel   @relation(fields: [hostelId], references: [id], onDelete: Cascade)
  room      Room?    @relation(fields: [roomId], references: [id], onDelete: Cascade)
  student   User     @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([studentId, hostelId, roomId])
}

model Inquiry {
  id        String   @id @default(uuid())
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  studentId String
  hostelId  String
  hostel    Hostel   @relation(fields: [hostelId], references: [id], onDelete: Cascade)
  student   User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  replies   Reply[]

  @@index([studentId])
  @@index([hostelId])
  @@index([isRead])
}

model Reply {
  id          String   @id @default(uuid())
  message     String
  createdAt   DateTime @default(now())
  inquiryId   String
  repliedById String
  inquiry     Inquiry  @relation(fields: [inquiryId], references: [id], onDelete: Cascade)
  repliedBy   User     @relation("UserReplies", fields: [repliedById], references: [id], onDelete: Cascade)
}

model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String?
  studentId String
  hostelId  String
  createdAt DateTime @default(now())
  hostel    Hostel   @relation(fields: [hostelId], references: [id], onDelete: Cascade)
  student   User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

model Notification {
  id        String   @id @default(uuid())
  message   String
  userId    String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserUpdateLog {
  id        String   @id @default(uuid())
  userId    String
  updatedBy String
  field     String
  oldValue  String?
  newValue  String?
  timestamp DateTime @default(now())
  user      User     @relation("UserUpdateLogs", fields: [userId], references: [id], onDelete: Cascade)
}

model AdminAction {
  id         String     @id @default(uuid())
  actionType ActionType
  targetType TargetType
  targetId   String
  reason     String?
  createdAt  DateTime   @default(now())
  adminId    String?
  admin      User?      @relation("AdminActions", fields: [adminId], references: [id], onDelete: Cascade)
}

enum Role {
  student
  owner
  admin
}

enum HostelStatus {
  pending
  approved
  rejected
  suspended
}

enum RoomType {
  single
  double
  dormitory
  apartment
}

enum ActionType {
  approve_hostel
  reject_hostel
  suspend_hostel
  verify_user
  suspend_user
  delete_content
}

enum TargetType {
  hostel
  user
  photo
  review
}

enum Gender {
  male
  female
  unisex
}

enum BookingStatus {
  pending
  confirmed
  cancelled
  completed
}
